<%= form_with(model: experience, html: {class: "login-form"}, id: "edit-experience") do |form| %>

<div class="form-group space-bound"">
  <label class="control-label"><%= t("company_name")%></label>
  <%= form.text_field :company_name, class: "form-control" %>
</div>

<div class="form-group">
  <label class="control-label"><%= t("position") %></label>
  <%= form.text_field :position, class: "form-control"%>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-6">
      <label class="control-label"><%= t("from") %></label>
      <%= form.text_field :first_day, class: "form-control" %>

    </div>
    <div class="col-md-6">
      <label class="control-label"><%= t("to") %></label>
      <%= form.text_field :last_day, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <label class="control-label"><%= t("description") %></label>
  <%= form.text_area :description, class: "form-control", placeholder: t("objective") %>
</div>

<div class="add-post-btn">
  <div class="float-left">
    <a href="javascript:$('#edit-experience').submit();", class="btn-added"><i class="ti-plus"></i> <%= t("update") %></a>
  </div>

  <div class="float-right">
    <a href= <%= candidate_edit_experience_path(current_user.profile)%> class="btn-delete" method="get" data-turbolinks="false"><i class="ti-trash"></i> <%= t("cancel") %></a>
  </div>
</div>
<% end %>
