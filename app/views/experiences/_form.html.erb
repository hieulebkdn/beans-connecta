<%= form_with(model: experience, html: {class: "login-form"}, id: "add-experience") do |form| %>

<div class="form-group space-bound"">
  <label class="control-label"><%= t("company_name")%></label>
  <%= form.text_field :company_name, class: "form-control", placeholder: "e.g BeansConnecta Company" %>

</div>

<div class="form-group">
  <label class="control-label"><%= t("position") %></label>
  <%= form.text_field :position, class: "form-control", placeholder: "e.g UI/UX Researcher" %>

</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-6">
      <label class="control-label"><%= t("from") %></label>
      <%= form.text_field :first_day, class: "form-control", placeholder: "e.g 2014-11 (YYYY-MM)" %>

    </div>
    <div class="col-md-6">
      <label class="control-label"><%= t("to") %></label>
      <%= form.text_field :last_day, class: "form-control", placeholder: "e.g 2015-11 (YYYY-MM)" %>
    </div>
  </div>
</div>

<div class="form-group">
  <label class="control-label"><%= t("detail") %></label>
  <%= form.text_area :description, class: "form-control", placeholder: t("objective") %>
</div>
<%= form.hidden_field :candidate_id, :value => current_user.profile %>

<div class="add-post-btn">
  <div class="float-left">
    <a href="javascript:$('#add-experience').submit();", class="btn-added"><i class="ti-plus"></i> <%= t("add_experience") %></a>
  </div>

  <div class="float-right">
    <a href= <%= candidate_edit_experience_path(current_user.profile)%> class="btn-delete" method="get" data-turbolinks="false"><i class="ti-trash"></i> <%= t("delete") %></a>
  </div>
</div>
<% end %>
