<%= render "layouts/header" %>
<section id="content" class="section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="page-login-form box">
          <h3>
            2. Create Your Company
          </h1>
          <%= form_for(@company, html: {class: "login-form" }) do |f| %>
          <div class="row">
              <div class="col-md-6 col-xs-6 col-lg-6">
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Company's name" %>
              </div>
            </div>
            </div>

            <div class="col-md-6 col-xs-6 col-lg-6">
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "Address" %>
              </div>
            </div>
            </div>
            </div>

          <div class="row">
            <div class="col-md-6 col-xs-6 col-lg-6">
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.text_field :city, autofocus: true, class: "form-control", placeholder: "City" %>
              </div>
            </div>
            </div>
            <div class="col-md-6 col-xs-6 col-lg-6">
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.text_field :country, autofocus: true, class: "form-control", placeholder: "City" %>
              </div>
            </div>
            </div>
            </div>
            <div class="col-md-0 col-xs-0 col-lg-0">
                <div class="form-group">
                  <div class="input-icon">
                    <i class="lni-user"></i>
                    <%= f.text_area :description, class: "form-control", placeholder: "Company's description" %>
                  </div>
                </div>
            </div>

            <div class="row">
            <div class="col-md-6 col-xs-6 col-lg-6">
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.text_field :scale,id: "input_scale", class: "form-control", placeholder: "Scale (0-200 employees)"  %>
              </div>
            </div>
            </div>
            <div class="col-md-6 col-xs-6 col-lg-6">
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.text_field :website, class: "form-control", placeholder: "Website URL" %>
              </div>
            </div>
            </div>
            </div>
            
            <div class="actions">
              <%= f.submit "Create company", class: "btn btn-common log-btn" %>
            </div>
            <p class="text-center">Already have company?</p>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "layouts/footer" %>
<a href="#" class="back-to-top">
  <i class="lni-arrow-up"></i>
</a>
<div id="preloader">
  <div class="loader" id="loader-1"></div>
</div>
