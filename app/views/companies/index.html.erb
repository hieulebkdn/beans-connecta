<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>description</th>
      <th>address</th>
      <th>country</th>
      <th>city</th>
      <th>Scale</th>
      <th>website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= company.address %></td>
        <td><%= company.country %></td>
        <td><%= company.city %></td>
        <td><%= company.scale %></td>
        <td><%= company.website %></td>
        <td><%= link_to 'Show', company %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

