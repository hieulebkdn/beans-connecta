<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-header">
          <h3>Find Job</h3>
        </div>
        <div class="job-search-form bg-cyan job-featured-search">
          <form>
            <div class="row justify-content-center">
              <div class="col-lg-8 col-md-8 col-xs-12">
                <div class="form-group">
                  <input class="form-control" type="text" placeholder="Company Name or Location">
                </div>
              </div>
              <div class="col-lg-2 col-md-2 col-xs-12">
                <button type="submit" class="button"><i class="lni-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<section id="featured" class="section bg-cyan">
  <div class="container">
    <div class="row">
      <% @companies.each do |company| %>
        <div class="col-lg-4 col-md-6 col-xs-12">
          <div class="job-featured">
            <div class="icon">
              <%= image_tag("features/img4.png") %>
            </div>
            <div class="content">
              <h3><%= link_to company.name, company_path(company) %></h3>
              <p class="brand"><%= truncate(company.description) %></p>
              <div class="tags">
                <span><i class="lni-map-marker"></i> <%= company.city %></span>
                <span><i class="lni-user"></i><%= company.scale %></span>
              </div>
              <span class="full-time">View jobs</span>
            </div>
          </div>
        </div>
      <%end%>
      <div class="col-12 text-center mt-4">
        <%= link_to t("alljob"), search_path, class: "btn btn-common" %>
      </div>
    </div>
  </div>
</section>
