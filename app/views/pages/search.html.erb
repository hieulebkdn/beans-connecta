<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-header">
          <h3><%= t "findjob" %></h3>
        </div>
        <div class="job-search-form bg-cyan job-featured-search">
          <%= form_with(url: search_path, id: "search-form", method: :get) do |form| %>
            <div class="row justify-content-center">
              <div class="col-lg-5 col-md-5 col-xs-12">
                <div class="form-group">
                  <%= form.text_field :term, class: "form-control", placeholder: t("search_placeholder") %>
                </div>
              </div>
              <div class="col-lg-5 col-md-5 col-xs-12">
                <div class="form-group">
                  <div class="search-category-container">
                    <label class="styled-select">
                      <select>
                        <option value="none"><%= t "location" %></option>
                        <option value="none">New York</option>
                        <option value="none">California</option>
                        <option value="none">Washington</option>
                        <option value="none">Birmingham</option>
                        <option value="none">Chicago</option>
                        <option value="none">Phoenix</option>
                      </select>
                    </label>
                  </div>
                  <i class="lni-map-marker"></i>
                </div>
              </div>
              <div class="col-lg-1 col-md-1 col-xs-12">
                <a href="javascript:$('#search-form').submit();", class="button"><i class="lni-search"></i></a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<section id="job-listings" class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <% @jobs.each do |job|%>
          <a class="job-listings" href=<%= job_path(id: job.id) %>>
            <div class="row">
              <div class="col-lg-6 col-md-6 col-xs-12">
                <div class="job-company-logo">
                  <% if job.company_logo.attached? %>
                    <%= image_tag(job.company_logo, class: "job-icon")%>
                  <% else %>
                    <%= image_tag 'features/img2.png', class: "job-icon" %>
                  <% end%>
                </div>
                <div class="job-details">
                  <h3><%= truncate(job.title, length: 44) %></h3>
                  <span class="company-neme">
                    <%= job.company_name %>
                  </span>
                </div>
              </div>
              <div class="col-lg-2 col-md-2 col-xs-12 text-center">
                <span class="btn-open">
                  <%= job.quantity %> Open Position
                </span>
              </div>
              <div class="col-lg-2 col-md-2 col-xs-12 text-center">
                <div class="location">
                  <i class="lni-map-marker"></i><%= job.workplace %>
                </div>
              </div>
              <div class="col-lg-2 col-md-2 col-xs-12 text-right">
                <span class="btn-apply">Apply Now</span>
              </div>
            </div>
          </a>
        <% end %>
        <% if (@jobs.size!=0 && @pagy) %>
          <%== pagy_bootstrap_nav(@pagy) %>
        <% end %>
      </div>
    </div>
  </div>
</section>
