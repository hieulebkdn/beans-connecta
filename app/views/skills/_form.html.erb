<%= form_with(model: skill, html: {class: "login-form"}, id: "add-skill", remote: true) do |form| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <label class="control-label"><%= t(".tag") %></label>
        <%= form.text_field :tag, class: "form-control", placeholder: t(".tag_placeholder") %>
      </div>
      <div class="col-md-6">
        <label class="control-label"><%= t("detail") %></label>
        <%= form.text_field :description, class: "form-control", placeholder: t(".detail_placeholder") %>
      </div>
      <%= form.hidden_field :candidate_id, :value => current_user.profile %>
    </div>
  </div>
  <div class="add-post-btn">
    <div class="float-left">
    <a href="javascript:$('#add-skill').submit();", class="btn-added"><i class="ti-plus" data-remote = "true"></i> <%= t("add_skill") %></a>

    </div>
    <div class="float-right">
      <a href= <%= candidate_edit_skill_path(current_user.profile)%> class="btn-delete" method="get" data-turbolinks="false"><i class="ti-trash"></i> <%= t("cancel") %></a>
    </div>
  </div>
<% end %>
