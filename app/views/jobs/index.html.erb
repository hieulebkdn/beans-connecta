<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-header">
          <h3><%= t("job") %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <%= render ("layouts/company_sidebar")%>
      <div class="col-lg-9 col-md-9 col-xs-12">
        <div class="job-alerts-item jobs">
          <h3 class="alerts-title"><%= t("manage_job") %></h3>
          <div id="new-job">
            <%= link_to t("new_job"), new_job_path, remote: true, class:"btn btn-common btn-sm" %>
          </div>
          <div id="jobs">
            <%= render @jobs %>
          </div>
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
