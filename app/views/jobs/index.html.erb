<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Position</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Requirement</th>
      <th>Min pay</th>
      <th>Max pay</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.position %></td>
        <td><%= job.quantity %></td>
        <td><%= job.description %></td>
        <td><%= job.requirement %></td>
        <td><%= job.min_pay %></td>
        <td><%= job.max_pay %></td>
        <td><%= job.is_active %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

