<section id="content" class="section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-6 col-xs-12">
        <div class="page-login-form box">
          <h3>
            <%= t ("create_account") %>
          </h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login-form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-user"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("your_email")%>
              </div>
            </div>
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-lock"></i>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: t("your_pass") %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-icon">
                <i class="lni-unlock"></i>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: t("retype_pass") %>
              </div>
            </div>
            <%= f.hidden_field(:profile, :value => params[:profile]) %>
            <%= f.hidden_field(:role, :value => params[:role]) %>
            <div class="actions">
              <%= f.submit t("register"), class: "btn btn-common log-btn" %>
            </div>
            <p class="text-center"> <%= link_to t("already_have_account"), new_session_path(resource_name), method: :get %> </p>
            
          <% end %>
          <hr>
          <p class="text-center"><%= t ("oauth_login_content") %></p>

          <div class="row justify-content-center">
          <div class="col-lg-5 col-md-6 col-xs-12">
          <%= link_to "fb.com", class: "btn btn-primary btn-block" do %>
            <i class="fa fa-facebook"></i>
          <% end %>
          </div>
          <div class="col-lg-5 col-md-6 col-xs-12">
          <%= link_to "google.com", class: "btn btn-danger btn-block" do %>
            <i class="fa fa-google"></i>
          <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<a href="#" class="back-to-top">
  <i class="lni-arrow-up"></i>
</a>
<div id="preloader">
  <div class="loader" id="loader-1"></div>
</div>
</html>
