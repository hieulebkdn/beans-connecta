<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-header">
          <h3><%= t("profile") %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <%= render ("layouts/candidate_sidebar")%>
      <div class="col-lg-8 col-md-12 col-xs-12">
        <div class="job-alerts-item candidates">
          <h3 class="alerts-title"><%= t("manage_skill") %></h3>

          <% @skills.each do |skill| %>
          <div id= <%= skill.id %>>
            <div class="manager-resumes-item">
              <div class="manager-content">
                <div class="manager-info">
                  <div class="manager-name">
                    <h4><a href="#"><%= skill.tag %></a></h4>
                  </div>
                </div>
              </div>
              <div class="update-date">
                <p class="status">
                  <%= skill.description %>
                </p>
                <div class="action-btn">
                  <%= link_to t("edit"),"google.com", remote: true, class:"btn btn-xs btn-gray" %>
                  <%= link_to t("delete"), skill, method: :delete, data: {confirm: "Are you sure?", remote: true}, class: "btn btn-xs btn-danger" %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
          <div id="new-skill">
            <%= link_to t("new_skill"), new_skill_path, remote: true, class:"btn btn-common btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
