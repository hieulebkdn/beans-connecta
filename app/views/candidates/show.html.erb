<% if can? :read, @candidate %>
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-header">
          <h3><%= t(".profile") %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
    <% if can? :manage, @candidate %>
      <%= render ("layouts/candidate_sidebar")%>
      <% else %>
      <%= render ("layouts/company_sidebar")%>
      <% end %>
      <div class="col-lg-9 col-md-9 col-xs-12">
        <div class="inner-box my-resume">
          <div class="author-resume">
            <div class="thumb">
              <% if @candidate.avatar.attached? %>
                <%= image_tag(@candidate.avatar)%>
              <% end %>
            </div>
            <div class="author-info">
          <div class="row">
            <div class="col-lg-7 col-md-7 col-xs-12">
            
              <h3><%= @candidate.name %></h3>
              <p class="sub-title"><%= @candidate.specialty %></p>
              <p><span class="address"><i class="lni-map-marker"></i><%= @candidate.address %></span>, <strong><%= @candidate.city %></strong></p>
              <p><span><i class="ti-phone"></i><%= @candidate.phone %></span></p>
              <div class="social-link">
                <a href="https://bit.ly/39fpZfM" class="Twitter"><i class="lni-twitter-filled"></i></a>
                <a href="https://www.facebook.com/leehieeu.lee" class="facebook"><i class="lni-facebook-filled"></i></a>
                <a href="https://bit.ly/39fpZfM" class="google"><i class="lni-google-plus"></i></a>
                <a href="https://www.linkedin.com/company/bizreach-service/about/" class="linkedin"><i class="lni-linkedin-fill"></i></a>
              </div>
              </div>
            <div class="col-lg-5 col-md-5 col-xs-12">
            <h3><%= t(".skill") %></h3>
            <% if @skills.count == 0 %>
              <%= t("no_skill") %>
            <% end %>
            <% @skills.each do |skill| %>
              <span class="badge badge-pill badge-success"><%= skill.tag %></span>   <%= skill.description %>
              <br>
            <% end %>
              </div>
              </div>

            </div>
          </div>
          <div class="about-me item">
            <h3><%= t(".aboutme") %></h3>
            <p><%= simple_format @candidate.objective %></p>
          </div>
          <div class="work-experence item">
            <h3><%= t(".experience") %></h3>
            <% if @experiences.count == 0 %>
              <%= t("no_experience") %>
            <% end %>
            <% @experiences.each do |exp| %>
              <h4><%= exp.position %></h4>
              <h5><%= exp.company_name %></h5>
              <span class="date">From <%= exp.first_day %> to <%= exp.last_day %></span>
              <p><%= simple_format exp.description %></p>
              <br>
            <% end %>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% else %>
<%= render "layouts/forbidden" %>
<% end %>
